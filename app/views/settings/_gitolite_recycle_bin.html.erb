<%
  recycle_bin = RedmineGitolite::Recycle.new
%>

<h3><%= l(:label_empty_recycle_bin) %></h3>

<% if !recycle_bin.content.empty? %>
  <table class="table table-hover">
    <th><%= l(:label_recycle_bin_content) %></th>
    <th><%= l(:label_recycle_bin_content_size) %></th>
    <th><%= l(:label_delete_from_recyle_bin) %> (<%= link_to l(:label_select_all), 'javascript:void(0);', :id => 'select_all_delete' %>)</th>
    <th><%= l(:label_restore_from_recyle_bin) %> (<%= link_to l(:label_select_all), 'javascript:void(0);', :id => 'select_all_restore' %>)</th>

    <% recycle_bin.content.each do |repo_trash| %>
      <tr>
        <td><%= repo_trash[0] %></td>
        <td><%= repo_trash[1][:size] %></td>
        <td><%= check_box_tag "settings[gitolite_purge_repos][]",   repo_trash[0], false, :class => 'empty_trash' %></td>
        <td><%= check_box_tag "settings[gitolite_restore_repos][]", repo_trash[0], false, :class => 'restore_trash' %></td>
      </tr>
    <% end %>

  </table>

  <div id="delete_warning" class="alert alert-error" style="display: none;">
    <%= l(:label_delete_warning) %>
  </div>
<% else %>
  <p class="nodata" style="padding: 5px 0 0;"><%=l(:label_no_data)%></p>
<% end %>

<%= javascript_tag do %>
  function displayWarning(){
    var checked_list = $(".empty_trash:checked");
    if(checked_list.length === 0){
      $('#delete_warning').hide();
    } else {
      $('#delete_warning').show();
    }
  }

  function checkSelection(element){
    console.log($(element));
    var element_id = $(element).attr('id');
    if (element_id.indexOf("gitolite_purge_repos") !=-1) {
      var conflict = element_id.replace("gitolite_purge_repos", "gitolite_restore_repos");
    } else {
      var conflict = element_id.replace("gitolite_restore_repos", "gitolite_purge_repos");
    }

    console.log(element_id);
    console.log(conflict);
  }

  $(document).ready(function() {

    $("#select_all_delete").on('click', function(){
      $('.empty_trash').each(function(){
        $(this).attr('checked', !$(this).attr('checked'));
        displayWarning();
      });
    });

    $("#select_all_restore").on('click', function(){
      $('.restore_trash').each(function(){
        $(this).attr('checked', !$(this).attr('checked'));
      });
    });

    $(".empty_trash").on('change', function(){
      displayWarning();
      checkSelection(this);
    });

    $(".restore_trash").on('change', function(){
      checkSelection(this);
    });
  });
<% end %>
